services:
  watchtower:
    image: containrrr/watchtower
    pull_policy: if_not_present
    volumes:
      - '/var/run/docker/sock:/var/run/docker.sock'
    restart: unless-stopped
    environment:
      - WATCHTOWER_LABEL_ENABLE=true
    deploy:
      labels:
        com.centurylinklabs.watchtower.enable: "true"
