services:
  portatainer_agent:
    image: portainer/agent:2.19.1
    volumes:
        - /var/run/docker.sock:/var/run/docker.sock
        - /var/lib/docker/volumes:/var/lib/docker/volumes
    ports:
        - '9001:9001'    
    restart: unless-stopped
    {% if use_wathtower %}
    deploy:
      labels:
        com.centurylinklabs.watchtower.enable: "true"
    {% endif %}
